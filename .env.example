# ====================================
# AI CYBERSHIELD MATRIX - ENVIRONMENT VARIABLES
# ====================================
# 
# IMPORTANT: Copy this file to '.env' and fill in your actual values
# Never commit the .env file to version control!

# ====================================
# FLASK CONFIGURATION
# ====================================
# Generate a strong secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# Flask environment (development or production)
FLASK_ENV=development
FLASK_DEBUG=True

# ====================================
# SUPABASE CONFIGURATION
# ====================================
# Get these from: https://app.supabase.com/project/_/settings/api

# Your Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anonymous (public) key
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase Service Role key (keep this secret!)
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Database connection string for PostgreSQL

DATABASE_URL=postgresql://postgres:ShaikhSaifuddin@db.xxxxx.supabase.co:5432/postgres

# ====================================
# EMAIL CONFIGURATION (Option 1: Supabase Auth - RECOMMENDED)
# ====================================
# Supabase handles email automatically if using Supabase Auth
# No additional configuration needed - emails sent via Supabase
USE_SUPABASE_AUTH=True

# ====================================
# EMAIL CONFIGURATION (Option 2: Gmail SMTP - ALTERNATIVE)
# ====================================
# Only needed if USE_SUPABASE_AUTH=False
# Get Gmail App Password from: https://myaccount.google.com/apppasswords

# Set to False to use Gmail SMTP instead of Supabase Auth
# USE_SUPABASE_AUTH=False

# Gmail SMTP settings (only used if USE_SUPABASE_AUTH=False)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_gmail_app_password_here

# Sender email address for OTP emails
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ====================================
# APPLICATION SETTINGS
# ====================================
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=128

# Upload folder path
UPLOAD_FOLDER=uploads

# ====================================
# PRODUCTION SETTINGS (for MilesWeb deployment)
# ====================================
# Set these when deploying to production

# Production domain
# DOMAIN=https://your-subdomain.herosite.pro

# Gunicorn workers (adjust based on server resources)
# WEB_CONCURRENCY=2

# Timeout for requests
# TIMEOUT=120
